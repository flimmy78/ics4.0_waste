			<Format>
  ┗━━━━━━┷━━━━━━━━━┷━━━━━━━━━┷━━━━━━━━━━━━┷━━━━━━━━━━━━━━┷━━━━━━━━━━━┷━━━━━━━━━━━┷━━━━━━━━━━━┷━━━━━━━━━┷━━━━━━━━━━━┷━━━━━━━━━┛
	             
	                                                                                           银行(签章)：     

			</Format>
		</TableFooter>
	</FormatDefine>
</Application>
