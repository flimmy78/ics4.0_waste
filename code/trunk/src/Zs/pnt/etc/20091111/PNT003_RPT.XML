<?xml version='1.0' encoding='ISO-8859-1'?>
<Application dbconnect="YES" trclog="PNT003.log">
	<VarDef>
		<String alias="RptHead" pos="1"/>
		<String alias="TxnDat"  pos="2"/>
	</VarDef>
	<DataSource object="sql">
		<Iterative>
			<Sql sql="select CityCd,TitAmt,ActNam,ActBnk,ActNo,SubCod,SubNam,PrjCod,PrjNam,DtlAmt from pntfcgk where TxnDat='%s' and DtlSts='1'">              
				<FieldList>$TxnDat|</FieldList>
			</Sql>
		</Iterative>
    <Summed type="sql">
       <Sql sql="select TxnDat,sum(cast(DtlAmt as bigint)) as sumamt,coalesce(COUNT(*),0) SumCnt from pntfcgk where TxnDat='%s' and DtlSts='1' group by TxnDat">
       <FieldList>$TxnDat|</FieldList>
     </Sql>
    </Summed>		
	</DataSource>
	<FormatDefine pagerows="20" pagesum="NO">
		<TableHeader line="1">
			<Para label="01" alias="$RptHead"/>
			<Para label="02" alias="$TxnDat"/>
			<Format>           
                                                                       #
                                                                                                                           打印日期:#                                                                                                                                                                                                                                                                                
  ┏━━━━━━┯━━━━━━━━━┯━━━━━━━━━┯━━━━━━━━━━━━┯━━━━━━━━━━━━━━┯━━━━━━━━━━━┯━━━━━━━━━━━┯━━━━━━━━━━━┯━━━━━━━━━┯━━━━━━━━━━━┯━━━━━━━━━┓
  ┃  分成日期  ┃    节段标识      ┃ 分成总金额       ┃      账户名称          ┃       账户所在行           ┃        账户          ┃     预算科目编码     ┃   预算科目名称       ┃  收费项目编码    ┃    收费项目名称      ┃   分成金额       ┃
  ┃            ┃                  ┃                  ┃                        ┃                            ┃                      ┃                      ┃                      ┃                  ┃                      ┃                  ┃
			</Format>
		</TableHeader>
		<Iterative line="1">
			<Para label="01" alias="$TxnDat"/>
			<Para label="02" alias="$CityCd"/>
			<Para label="03" alias="$TitAmt"/>
			<Para label="04" alias="$ActNam"/>
			<Para label="05" alias="$ActBnk"/>
			<Para label="06" alias="$ActNo"/>
			<Para label="07" alias="$SubCod"/>	
			<Para label="08" alias="$SubNam"/>
			<Para label="09" alias="$PrjCod"/>
			<Para label="10" alias="$PrjNam"/>
			<Para label="11" alias="AMTFMT($DtlAmt)"/>
			<Format>
  ┣━━━━━━╋━━━━━━━━━╋━━━━━━━━━╋━━━━━━━━━━━━╋━━━━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━┫
  ┃#           ┃#                 ┃                 #┃#                       ┃#                           ┃#                     ┃#                     ┃#                     ┃#                 ┃#                     ┃#
			</Format>
		</Iterative>
    <Summed line='1'>
       <Para label="01" alias="$TxnDat"         spread="left"></Para>
       <Para label="02" alias="$SumCnt"         spread="left"></Para>
       <Para label="03" alias="AMTFMT($sumamt)" spread="left"></Para>
       <Format>
  ┣━━━━━━┻━━━━━━━━━┻━━━━━━━━━┻━━━━━━━━━━━━┻━━━━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━┫
  ┃ 合计       分成日期: #                       笔数:   #              金额：            #                                                                                                                                                            ┃
  ┃                                                                                                                                                                                                                                                    ┃
       </Format>
    </Summed>		
