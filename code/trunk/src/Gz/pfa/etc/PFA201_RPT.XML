      <Para label="02" alias="SUBSTR($SUBNAM,1,40)"/>
      <Para label="03" alias="$PRJCOD"/>
      <Para label="04" alias="SUBSTR($PRJNAM,1,40)"/>
      <Para label="05" alias="$AMTTYP"/>
      <Para label="06" alias="$DPTCOD"/>
      <Para label="07" alias="$QUOID"/>
