<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- 珠海市财局（或万山财局）行政收费本网点轧帐单 -->
<Application  dbconnect="YES" trclog="RPTCAD_001.trc">
  <VarDef>
    <String alias="CrgTyp" name="$CrgTyp"/>
    <String alias="NodNo"  name="$NodNo" />
    <String alias="ActDat" name="$PrtDat" />
    <String alias="CcyCod" name="$CcyCod" />
    <String alias="Smr"    name="$Smr" /> 
  </VarDef>
  <MsgConvert>
    <Item alias="CrgWay">
      <Convert value="0" msg="现金"/>
      <Convert value="1" msg="转账"/>
    </Item>
    <Item alias="RecSts">
      <Convert value="1" msg="成功"/>
      <Convert value="C" msg="抹账"/>
    </Item>
  </MsgConvert>
  <DataSource object="sql">
    <Iterative>
      <Sql sql="select * from cadjnldtl where NodNo='%s' and ActDat='%s' and CcyCod='%s' and CrgTyp='%s' and RecSts='1' and CrgWay in ('0','1')" >
        <FieldList>$NodNo|$ActDat|$CcyCod|$CrgTyp|</FieldList>
      </Sql> 
    </Iterative>
    <Summed type="sql" >
      <Sql sql="select COALESCE(sum(CAST(ItmAmt AS BIGINT)),0) TotAmt 
         from cadjnldtl  where NodNo='%s' and ActDat='%s' and CcyCod='%s' and CrgTyp='%s' and RecSts='1' and CrgWay in ('0','1')" >
        <FieldList>$NodNo|$ActDat|$CcyCod|$CrgTyp|</FieldList>
      </Sql>
    </Summed>
  </DataSource>
  <FormatDefine pagerows="20" pagesum="YES">
    <TableHeader>
      <Para label="01" alias="$Smr"/>
      <Para label="02" alias="$TlrId"/>      
      <Para label="03" alias="SUBSTR($ActDat,1,4)"/>
      <Para label="04" alias="SUBSTR($ActDat,5,2)"/>
      <Para label="05" alias="SUBSTR($ActDat,7,2)"/>
      <Para label="06" alias="$CcyCod"/>
      <Format>
                                       #
					  		
    网点：#                                          #    年#  月#  日                 币种：#
┏━━━━┳━━━━━━┳━━━┳━━━━┳━━━━━━━━┳━━━━━┳━━━━━━━━━━━━━━━━━━━━━┳━━━━━━━━━┳━━┳━━┓
┃柜 员 号┃ 流  水  号 ┃小序号┃凭证种类┃ 凭  证  号  码 ┃ 收费编码 ┃              缴款人名称                  ┃   金        额   ┃现转┃状态┃ 
      </Format>
    </TableHeader>
    <Iterative line="1">
      <Para label="01" alias="$TlrId"	spread="mid"/>
      <Para label="02" alias="$TckNo"	spread="mid"/>
      <Para label="03" alias="$VchSeq"	spread="mid"/>
      <Para label="04" alias="$RcpTyp"	spread="mid"/>
      <Para label="05" alias="$RcpNo"	spread="mid"/>
      <Para label="06" alias="$CrgCod"	spread="mid"/>
      <Para label="07" alias="$CusNam"	spread="mid"/>
      <Para label="08" alias="AMTFMT($ItmAmt)"	spread="mid"/>
      <Para label="09" alias="$CrgWay"	spread="mid"  convert="YES"/>
      <Para label="10" alias="$RecSts"	spread="mid"  convert="YES"/>
      <Format>
┣━━━━╋━━━━━━╋━━━╋━━━━╋━━━━━━━━╋━━━━━╋━━━━━━━━━━━━━━━━━━━━━╋━━━━━━━━━╋━━╋━━┫
┃#       ┃#           ┃#     ┃#       ┃#               ┃#         ┃#                                         ┃#                 ┃#   ┃#   ┃
      </Format>
    </Iterative>
    <Summed>
      <Para label="01" alias="AMTFMT($TotAmt)"  spread="right" />
      <Format>
┗━━━━┻━━━━━━┻━━━┻━━━━┻━━━━━━━━┻━━━━━┻━━━━━━━━━━━━━━━━━━━━━┻━━━━━━━━━┻━━┻━━┛
                                                                                      合计：#                                                                                        
      </Format>
    </Summed>
  </FormatDefine>
</Application>
